# Global parameters
systemFiles     = Ar_95K.in            # List of input filenames for each system
mode            = simulation           # Run MC sampling (simulation) or ML-IMC optimization (training)
inputmodel      = models/LJ-10-1.bson  # Specify a model name, "random" for random initialization or "zero" for zeros 
                                       # in the first layer of the network

# Monte Carlo parameters
steps          = 5000000             # Total number of MC steps
Eqsteps        = 2500000             # Equilibration MC steps
stepAdjustFreq = 100000              # Frequency of MC step adjustment   
trajout        = 50000               # XTC trajectory frequency
outfreq        = 25000               # Output frequency

# Network parameters
minR            = 2.0                   # Min distance for G2 symmetry function, Å
maxR            = 6.0                   # Max distance for G2 symmetry function, Å
sigma           = 0.5                   # Sigma from Gaussian distribution in Å, corresponds η = 1/√(2σ) parameter in G2 symmetry function
                                        # recommended values in Å: 0.8 -- 2 Å
                                        #                       η: 0.8 -- 0.125

neurons         = 10                    # Number of neurons in the network (excluding the energy output neuron)
iters           = 1                    # Number of learning iterations
activation      = identity              # Activation function
                                        # for more info: https://fluxml.ai/Flux.jl/stable/training/optimisers/
REGP            = 0                     # Regularization parameter (set to zero to turn off regularization)
optimizer       = NAdam                 # Optimizer type 
rate            = 0.25                  # Learning rate
momentum        = 0.9                   # Momentum / Nesterov Momentum coefficient
decay1          = 0.9                   # Decay of momentum (decay_1, decay_2)
decay2          = 0.999
