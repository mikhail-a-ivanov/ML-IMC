# Global parameters
systemFiles     = 100CH3OH-CG.in      # List of input filenames for each system
mode            = training            # Run MC sampling (simulation) or ML-IMC optimization (training)
inputmodel      = random                # Specify a model name, "random" for random initialization or "zero" for zeros 
                                      # in the first layer of the network

# Monte Carlo parameters
steps          = 100000             # Total number of MC steps
Eqsteps        = 50000              # Equilibration MC steps
stepAdjustFreq = 5000               # Frequency of MC step adjustment   
trajout        = 5000               # XTC trajectory frequency
outfreq        = 1000               # Output frequency

# Network parameters
minR            = 2.0                  # Min distance for G2 symmetry function, Å
maxR            = 7.0                  # Max distance for G2 symmetry function, Å
sigma           = 0.5                     # Sigma from Gaussian distribution in Å, corresponds η = 1/√(2σ) parameter in G2 symmetry function
                                        # recommended values in Å: 0.8 -- 2 Å
                                        #                       η: 0.8 -- 0.125

neurons         = 10, 20, 20, 1                   # Number of neurons in the network
iters           = 5                     # Number of learning iterations
activations     = relu, relu, identity                  # Activation function
                                        # for more info: https://fluxml.ai/Flux.jl/stable/training/optimisers/
REGP            = 0                  # Regularization parameter (set to zero to turn off regularization)
optimizer       = Adam                  # Optimizer type 
rate            = 0.5                   # Learning rate
momentum        = 0.9                   # Momentum / Nesterov Momentum coefficient
decay1          = 0.9                   # Decay of momentum (decay_1, decay_2)
decay2          = 0.999
