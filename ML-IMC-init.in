# System
N              = 512                  # Number of particles
box            = 29.124 29.124 29.124 # Box vectors [Å]

# Conditions
T              = 95.0                 # [K]

# Monte Carlo parameters
mode           = training             # Run MC sampling (simulation) or ML-IMC optimization (training)          
delta          = 0.75                 # Max displacement [Å]
steps          = 1000000              # Total number of MC steps
Eqsteps        = 500000               # Equilibration MC steps
stepAdjustFreq = 50000                # Frequency of MC step adjustment
targetAR       = 0.5                  # Target acceptance ratio

# Output control          
xyzout         = 0                    # XYZ output frequency
outfreq        = 500                  # Output frequency

# RDF parameters          
binWidth       = 0.025                # [Å]
Nbins          = 400                  # Number of bins

# Network parameters
paramsInit     = repulsion            # Type of network parameter initialization (random or repulsion)
shift          = 0.01                 # shift parameter in the repulsion guess (stiffness*[exp(-alpha*r)-shift])
stiffness      = 10                   # stiffness parameter in the repulsion guess (stiffness*[exp(-alpha*r)-shift])
neurons        = 0                    # Number of neurons in the hidden layer (0 for no hidden layers)
paircorr       = RDF                  # Type of pair correlations (RDF or histogram)
iters          = 10                    # Number of learning iterations
activation     = identity             # Activation function
optimizer      = Momentum             # Optimizer (other options - Descent)
rate           = 0.0005                # Learning rate
momentum       = 0.75                  # Momentum coefficient

# Input files
xyzname        = LJ-data/512Ar/mctraj-p001.xyz    # Input configuration file
rdfname        = LJ-data/512Ar/rdf-mean-p6.dat   # Reference RDF file
modelname      = model-iter-25.bson         # Name of a trained model file (simulation mode)
